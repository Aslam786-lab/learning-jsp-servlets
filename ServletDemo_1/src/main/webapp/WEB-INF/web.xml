<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/j2ee/web-app_3_1.xsd"
         version="3.1">
    
<!--     xml code for servlet interface -->
   <servlet>
   		<servlet-name>first</servlet-name>
   		<servlet-class>com.servlet.creation.type.ServletInterface</servlet-class>
   </servlet>
   
   <servlet-mapping>
   		<servlet-name>first</servlet-name>
   		<url-pattern>/servlet-interface</url-pattern>
   </servlet-mapping>
   
<!--     xml code for generic servlet -->
   <servlet>
   		<servlet-name>second</servlet-name>
   		<servlet-class>com.servlet.creation.type.GenericServletDemo</servlet-class>
   </servlet>
   
   <servlet-mapping>
   		<servlet-name>second</servlet-name>
   		<url-pattern>/generic-servlet</url-pattern>
   </servlet-mapping>
	
	
	<!--     xml code for http servlet -->
   <servlet>
   		<servlet-name>third</servlet-name>
   		<servlet-class>com.servlet.creation.type.HttpServletDemo</servlet-class>
   </servlet>
   
   <servlet-mapping>
   		<servlet-name>third</servlet-name>
   		<url-pattern>/http-servlet</url-pattern>
   </servlet-mapping>
	

    
</web-app>